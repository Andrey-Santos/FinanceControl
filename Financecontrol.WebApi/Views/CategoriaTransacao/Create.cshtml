@model FinanceControl.Core.Application.DTOs.CategoriaTransacao.CategoriaTransacaoCreateDto

@{
    ViewData["Title"] = "Criar - Categoria de transação";
}

<div class="mt-5 row justify-content-center">
    <div class="card shadow bg-black text-white col-md-6">
        <div class="card-body">
            <h4 class="card-title mb-4">Criar</h4>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label text-white"></label>
                    <input asp-for="Nome" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    @if (TempData["Erro"] != null)
                    {
                        <div class="alert alert-danger py-2 px-3 small">@TempData["Erro"]</div>
                    }
                    <button type="submit" class="btn btn-outline-light">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
        </div>
    </div>
</div>
