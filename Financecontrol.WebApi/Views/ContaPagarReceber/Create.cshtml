@model FinanceControl.Core.Application.DTOs.ContaPagarReceber.ContaPagarReceberCreateDto

@{
    ViewData["Title"] = "Nova Conta (Pagar/Receber)";
}

<div class="mt-5 row justify-content-center">
    <div class="card bg-dark text-white shadow col-md-6">
        <div class="card-body">
            <h4 class="card-title mb-4">Adicionar Conta</h4>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Valor" class="form-label"></label>
                    <input asp-for="Valor" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Valor" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataVencimento" class="form-label"></label>
                    <input asp-for="DataVencimento" class="form-control" type="date" />
                    <span asp-validation-for="DataVencimento" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tipo" class="form-label"></label>
                    <select asp-for="Tipo" class="form-select"
                        asp-items="Html.GetEnumSelectList<FinanceControl.Core.Domain.Enums.TipoTransacao>()">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ContaBancariaId" class="form-label"></label>
                    <select asp-for="ContaBancariaId" class="form-select" asp-items="ViewBag.Contas"></select>
                    <span asp-validation-for="ContaBancariaId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    @if (TempData["Erro"] != null)
                    {
                        <div class="alert alert-danger py-2 px-3 small">@TempData["Erro"]</div>
                    }
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }
        </div>
    </div>
</div>
