@model IEnumerable<FinanceControl.Core.Application.DTOs.ContaPagarReceber.ContaPagarReceberResponseDto>

@{
    ViewData["Title"] = "Contas a Pagar / Receber";
}

<div class="container mt-4">
    <h2 class="mb-4 text-white">Contas a Pagar / Receber</h2>

    <!-- Botões de ação -->
    <div class="d-flex gap-2 mb-3">
        <a asp-action="Create" class="btn btn-success">Adicionar Conta</a>
        <a id="btnEditar" class="btn btn-primary disabled">Editar</a>
        <button id="btnExcluir" class="btn btn-danger disabled">Excluir</button>
        <button id="btnPagar" class="btn btn-warning disabled">Marcar como Paga</button>
    </div>

    <!-- Tabela -->
    <table class="table table-dark table-striped table-hover rounded shadow-sm" id="tabelaContas">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descrição</th>
                <th>Valor</th>
                <th>Data Vencimento</th>
                <th>Data Pagamento</th>
                <th>Status</th>
                <th>Tipo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var conta in Model)
            {
                string statusClass = conta.Status switch
                {
                    FinanceControl.Core.Domain.Enums.StatusContaPagarReceber.Atrasada => "text-danger fw-bold",
                    FinanceControl.Core.Domain.Enums.StatusContaPagarReceber.Paga => "text-success",
                    _ => "text-warning"
                };

                <tr data-id="@conta.Id" style="cursor: pointer;">
                    <td>@conta.Id</td>
                    <td>@conta.Descricao</td>
                    <td>@conta.Valor.ToString("C")</td>
                    <td>@conta.DataVencimento.ToString("dd/MM/yyyy")</td>
                    <td>@(conta.DataPagamento.HasValue? conta.DataPagamento.Value.ToString("dd/MM/yyyy") : "-")</td>
                    <td class="@statusClass">@conta.Status</td>
                    <td>@conta.Tipo</td>
                </tr>
            }
        </tbody>
    </table>
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger py-2 px-3 small">@TempData["Erro"]</div>
    }
</div>

<!-- Modal Pagar -->
<div class="modal fade" id="modalPagar" tabindex="-1" aria-labelledby="modalPagarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white shadow">
            <div class="modal-header border-secondary">
                <h5 class="modal-title" id="modalPagarLabel">Confirmar Pagamento</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <form id="formPagar">
                    <div class="mb-3">
                        <label for="dataPagamento" class="form-label">Data de Pagamento</label>
                        <input type="date" class="form-control bg-secondary text-white" id="dataPagamento" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="confirmarPagar" class="btn btn-warning">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <form id="antiForgeryForm" style="display:none">
        @Html.AntiForgeryToken()
    </form>

    <script>
        const token = document.querySelector("#antiForgeryForm input[name='__RequestVerificationToken']").value;
        let contaSelecionadaId = null;

        document.querySelectorAll("#tabelaContas tbody tr").forEach(row => {
            row.addEventListener("click", () => {
                // Remove seleção anterior
                document.querySelectorAll("#tabelaContas tbody tr").forEach(r => r.classList.remove("table-active"));

                // Adiciona seleção
                row.classList.add("table-active");
                contaSelecionadaId = row.getAttribute("data-id");

                // Habilita botões
                document.getElementById("btnEditar").classList.remove("disabled");
                document.getElementById("btnExcluir").classList.remove("disabled");
                document.getElementById("btnPagar").classList.remove("disabled");
            });
        });

        document.getElementById("btnEditar").addEventListener("click", function () {
            if (contaSelecionadaId) {
                window.location.href = `/ContaPagarReceber/Edit/${contaSelecionadaId}`;
            }
        });

        document.getElementById("btnExcluir").addEventListener("click", function () {
            if (contaSelecionadaId && confirm("Tem certeza que deseja excluir esta conta?")) {
                fetch(`/ContaPagarReceber/Delete/${contaSelecionadaId}`,
                    {
                        method: "POST",
                        headers: { 'RequestVerificationToken': token }
                    }).then(response => {
                        if (response.ok)
                            location.reload();
                    });
            }
        });

        // Botão pagar -> abre modal
        document.getElementById("btnPagar").addEventListener("click", function () {
            if (contaSelecionadaId) {
                // Define a data atual como padrão no input
                const hoje = new Date();
                document.getElementById("dataPagamento").value = hoje.toISOString().split("T")[0];

                var modal = new bootstrap.Modal(document.getElementById("modalPagar"));
                modal.show();
            }
        });

        // Confirmar pagamento
        document.getElementById("confirmarPagar").addEventListener("click", function () {
            const dataPagamento = document.getElementById("dataPagamento").value;
            if (!dataPagamento) {
                alert("Selecione uma data válida.");
                return;
            }

            fetch(`/ContaPagarReceber/Pagar/${contaSelecionadaId}?dataPagamento=${encodeURIComponent(dataPagamento)}`, {
                method: "POST",
                headers: { 'RequestVerificationToken': token }
            }).then(response => {
                if (response.ok)
                    window.location.reload()
                else
                    alert("Erro ao marcar como paga. Verifique se a conta já não está paga.");
            });
        });

    </script>
}
