@model IEnumerable<FinanceControl.Core.Application.DTOs.Fatura.FaturaResponseDto>

@{
    ViewData["Title"] = "Fatura";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <table class="table table-dark table-striped table-hover rounded shadow-sm" id="tabelaBancos">
        <thead>
            <tr>
                <th>ID</th>
                <th>Mês</th>
                <th>Ano</th>
                <th>Cartão</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var modelo in Model)
            {
                <tr data-id="@modelo.Id" style="cursor: pointer;">
                    <td>@modelo.Id</td>
                    <td>@modelo.Mes</td>
                    <td>@modelo.CartaoApelido</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="Delete" method="post" id="tokenForm" style="display:none">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        let tipoSelecionadoId = null;

        document.querySelectorAll("#tabelaBancos tbody tr").forEach(row => {
            row.addEventListener("click", () => {
                // Remove seleção anterior
                document.querySelectorAll("#tabelaBancos tbody tr").forEach(r => r.classList.remove("table-active"));

                // Adiciona seleção
                row.classList.add("table-active");
                tipoSelecionadoId = row.getAttribute("data-id");

                // Habilita botões
                document.getElementById("btnEditar").classList.remove("disabled");
                document.getElementById("btnExcluir").classList.remove("disabled");
            });
        });

        document.getElementById("btnEditar").addEventListener("click", function () {
            if (tipoSelecionadoId) {
                window.location.href = `/Banco/Edit/${tipoSelecionadoId}`;
            }
        });

        document.getElementById("btnExcluir").addEventListener("click", function () {
            if (tipoSelecionadoId && confirm("Tem certeza que deseja excluir este banco?")) {
                const form = document.createElement('form');
                form.method = 'post';
                form.action = `/Banco/Delete/${tipoSelecionadoId}`;

                const antiForgeryInput = document.querySelector('input[name="__RequestVerificationToken"]')?.cloneNode();
                if (antiForgeryInput) form.appendChild(antiForgeryInput);

                document.body.appendChild(form);
                form.submit();
            }
        });
    </script>
}
