@model FinanceControl.Core.Application.DTOs.Transacao.TransacaoCreateDto;

@{
    ViewData["Title"] = "Importar Transações";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white shadow">
                <div class="card-body">
                    <h4 class="card-title mb-4">Importar Transações</h4>

                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="ContaBancariaId" class="form-label">Conta Bancária</label>
                            <select asp-for="ContaBancariaId" asp-items="ViewBag.Contas" class="form-select"></select>
                            <span asp-validation-for="ContaBancariaId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Arquivo Excel</label>
                            <input type="file" name="arquivo" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Importar</button>
                        </div>
                    </form>
                    
                    @if (ViewBag.Sucesso != null)
                    {
                        <div class="alert alert-success mt-3">@ViewBag.Sucesso</div>
                    }

                    @if (ViewBag.Erro != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Erro</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
