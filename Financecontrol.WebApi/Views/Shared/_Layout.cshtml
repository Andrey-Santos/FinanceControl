@{
    var titulo = ViewBag.Title ?? "FinanceControl";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@titulo</title>

    <!-- Bootstrap + ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="bg-dark text-white min-vh-100">

    <!-- Cabeçalho -->
    <header>
        <nav class="navbar navbar-dark bg-black px-4 shadow-sm container-fluid d-flex justify-content-between align-items-center">
  
        <!-- Logo à esquerda -->
        <a class="navbar-brand fw-bold fs-4 text-white ms-5" href="/">FinanceControl</a>

        <!-- Menu central -->
        <div class="d-flex gap-3">
            <a href="/Transacao" class="btn text-white btn-md">Transações</a>
            <a href="/Importacao" class="btn text-white btn-md">Importação</a>
            <a href="/Configuracao" class="btn text-white btn-md">Configurações</a>
        </div>

        <!-- Usuário + Sair à direita -->
        <div class="d-flex align-items-center gap-3">
            <span class="bg-black px-3 py-2 rounded text-white small">
                Olá, @User.Identity?.Name
            </span>
            <a href="/Logout" class="btn btn-outline-light btn-sm">Sair</a>
        </div>

</nav>

    </header>

    <!-- Conteúdo principal -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
