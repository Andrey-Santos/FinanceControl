@{
    var titulo = ViewBag.Title ?? "FinanceControl";
    string currentPath = Context.Request.Path.Value?.ToLower() ?? "/";
    bool IsActive(string pathStartsWith)
    {
        return currentPath.StartsWith(pathStartsWith.ToLower());
    }
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@titulo</title>

    <!-- Bootstrap + ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="bg-dark text-white min-vh-100">

    <!-- Cabeçalho -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-sm">
            <div class="container-fluid px-4">
                <!-- Logo -->
                <a class="navbar-brand fw-bold fs-4 text-white" href="/">FinanceControl</a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar" aria-controls="topNavbar" aria-expanded="false" aria-label="Alternar navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="topNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/transacao") ? "active" : "")" aria-current="@(IsActive("/transacao") ? "page" : null)" href="/Transacao">Transações</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/contapagarreceber") ? "active" : "")" aria-current="@(IsActive("/contapagarreceber") ? "page" : null)" href="/ContaPagarReceber">Contas a Pagar / Receber</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/importacao") ? "active" : "")" aria-current="@(IsActive("/importacao") ? "page" : null)" href="/Importacao">Importação</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/configuracao") ? "active" : "")" aria-current="@(IsActive("/configuracao") ? "page" : null)" href="/Configuracao">Configurações</a>
                        </li>
                    </ul>

                    <!-- Usuário + Sair -->
                    <div class="d-flex align-items-center gap-2">
                        <span class="text-white-50 small">Olá, @User.Identity?.Name</span>
                        <a href="/Login/Logout" class="btn btn-outline-light btn-sm">Sair</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Conteúdo principal -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
