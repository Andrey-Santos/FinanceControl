@model FinanceControl.Core.Application.DTOs.TipoTransacao.TipoTransacaoCreateDto

@{
    ViewData["Title"] = "Tipo de Transação";
}

<div class="mt-5 row justify-content-center">
    <div class="card shadow bg-black text-white col-md-6">
        <div class="card-body">
            <h4 class="card-title mb-4">Novo</h4>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label text-white"></label>
                    <input asp-for="Nome" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-light">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>
