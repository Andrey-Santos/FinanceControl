@model IEnumerable<FinanceControl.Core.Application.DTOs.TipoTransacao.TipoTransacaoResponseDto>

@{
    ViewData["Title"] = "Tipos de Transação";
}

<div class="container mt-4">
    <h2 class="mb-4">Tipos de Transação</h2>

    <table class="table table-dark table-striped table-hover rounded shadow-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Tipo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipo in Model)
            {
                <tr>
                    <td>@tipo.Id</td>
                    <td>@tipo.Nome</td>
                    <td>@tipo.Tipo</td>
                </tr>
            }
        </tbody>
    </table>
</div>
